<Window x:Class="GerenciamentoEstoque.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GerenciamentoEstoque"
        mc:Ignorable="d"
        Title="AddUser" Height="550" Width="380"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <Border  Grid.RowSpan="2" 
                    CornerRadius="20" Padding="20">
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="#606c38" Offset="0.1"/>
                        <GradientStop Color="#fefae0" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            <StackPanel Grid.Row="0" VerticalAlignment="Center">
                <TextBlock Text="Adicionar Usuário" 
                           FontSize="35"
                           FontFamily="Helvetica"
                           FontWeight="Light" 
                           Foreground="#dad7cd"
                           Opacity="0.8"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
            </StackPanel>
            <StackPanel Grid.Row="1">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Label Content="Username"
                           FontFamily="Helvetica"
                           FontSize="20"
                           Foreground="White"
                           Opacity="0.8" 
                           Margin="10,0,0,0"/>
                    
                    <TextBox x:Name="UserTxt" 
                             HorizontalAlignment="Left" 
                             Width="189" 
                             Height="28"
                             Background="Transparent"    
                             BorderThickness="0" 
                             Margin="5,0,0,0"
                             FontFamily="Helvetica"
                             FontSize="20"
                             Foreground="White"
                             Opacity="0.5" />
                </StackPanel>
                <Border BorderBrush="White" 
                        BorderThickness="2" 
                        Width="200" 
                        Opacity="0.6"
                        HorizontalAlignment="Center"
                        Margin="35,0,0,0"/>  
                <StackPanel Orientation="Horizontal" Margin="0,35,0,0">
                    <Label Content="Password"
                           FontFamily="Helvetica"
                           FontSize="20"
                           Foreground="White"
                           Opacity="0.8" 
                           Margin="10,0,0,0"/>
                    
                    <PasswordBox x:Name="PassTxt" 
                             HorizontalAlignment="Left" 
                             Width="189" 
                             Height="25"
                             Background="Transparent"    
                             BorderThickness="0" 
                             Margin="5,0,0,0"
                             FontFamily="Helvetica"
                             FontSize="20"
                             Foreground="White"
                             Opacity="0.5" 
                             MaxLength="16"
                             />
                </StackPanel>
                <Border BorderBrush="White" 
                        BorderThickness="2" 
                        Width="200" 
                        Opacity="0.6"
                        HorizontalAlignment="Center"
                        Margin="35,0,0,10"/>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,0" HorizontalAlignment="Center">
                <Label Content="Tipo de Usuário"
                        FontFamily="Helvetica"
                        FontSize="20"                       
                        Foreground="White"
                        Opacity="0.8"
                        Margin="10,0,25,0"/>
                    
                <CheckBox x:Name="AdminCheckBox" 
                          Content="Administrador"
                          FontFamily="Helvetica"
                          FontSize="20"
                          Foreground="White"
                          Opacity="0.8"
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <Button Height="78"
                            Width="120"
                            Content="Adicionar"
                            FontSize="25"
                            Margin="0,20,0,0"
                            HorizontalAlignment="Left"
                            Click="Register"/>
                
                    <Button Height="78"
                            Width="120"
                            Content="Voltar"
                            FontSize="25"
                            Margin="20,20,0,0"
                            HorizontalAlignment="Right" 
                            Click="Voltar_Click"/>
                    
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
