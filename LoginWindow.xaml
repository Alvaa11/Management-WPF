<Window x:Class="GerenciamentoEstoque.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GerenciamentoEstoque"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="525" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="1,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF5E7571" Offset="0.811"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Border Height="350" Width="400" BorderBrush="#FF38B000" BorderThickness="1" CornerRadius="25" Padding="10" Background="#FFF1F1F1">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Height="300" Width="311">
                <Label Content="LOJA DE ELETRÔNICOS" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center"
           VerticalAlignment="Center" Margin="0,0,0,25" FontFamily="Bahnschrift Condensed"/>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" Content="Usuario*" FontWeight="Bold" FontSize="35" Margin="0,10,0,25" FontFamily="Bahnschrift Condensed"/>
                    <TextBox x:Name="UsernameTextBox" Grid.Row="0" Grid.Column="1" FontSize="20" Margin="0,20,0,25" Height="40" />
                    <Label Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left" Content="Senha*" FontWeight="Bold" FontSize="35" Margin="0,10,0,25" Height="96" FontFamily="Bahnschrift Condensed"/>
                    <PasswordBox x:Name="PasswordTextBox" Grid.Row="2" Grid.Column="1" FontSize="20" Margin="0,20,0,80" Height="40" 
                             PasswordChar="*" MaxLength="16"/>
                    <Button Grid.Row="3" Grid.ColumnSpan="2" Height="40" Width="190" Content="Entrar" 
                            FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"
                            Foreground="White" Click="OnSubmit" Background="#FF38B000" BorderBrush="#FF38B000" 
                            Padding="0" Cursor="Hand" Margin="0,80,0,0" />
                </Grid>
                <Label Content="* Campos obrigatórios" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,0"/>
            </StackPanel >
        </Border>
    </Grid>
</Window>
